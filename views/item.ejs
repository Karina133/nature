<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

    <div class="section">
        <h2 class="section__title">
            <%= item.title %>
        </h2>
        <img class="section__image" src="/img/<%= item.image %>">
        <% for (let i=0; i < itemCats.length; i++) { %>
            <p>
                <%= itemCats[i].title %>
            </p>
            <% } %>
    </div>

    <form action="/update" method="post">
        <div class="form-group">
            <label class="form-group__label" for="title">title</label>
            <input value="<%= item.title %>" class="form-group__input" type="text" id="title" name="title" placeholder="title">
        </div>

        <div class="form-group">
            <label class="form-group__label" for="image">image</label>
            <input value="<%= item.image %>" class="form-group__input" type="text" id="image" name="image" placeholder="image">
        </div>

        <input type="hidden" value="<%= item.id %>" name="id">
        <input class="form-button" type="submit" value="Обновить">

    </form>

    <div>
        <h6></h6>
    </div>

    <form action="/catAdd" method="post">
        <input type="hidden" name="it_id" value="<%= item.id %>">
        <div class="form-group">
            <select name="cat_id">
                <% for (let i=0; i < categories.length; i++) { %>
                    <option value="<%= categories[i].id %>">
                        <%= categories[i].title %>
                    </option>
                    <% } %>
            </select>

        </div>
        <input class="form-button" type='submit' value="Добавить категорию">
    </form>

<%- include('particles/footer.ejs') %>